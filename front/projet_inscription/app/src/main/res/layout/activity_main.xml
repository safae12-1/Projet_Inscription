<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bnGfiliere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestion des Filieres"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/bnGrole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestion des Roles"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/bnGetudiant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestion des Etudiants"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/bnAffrole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affectation des Roles"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/bnEparFiliere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les étudiants par Filière"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>